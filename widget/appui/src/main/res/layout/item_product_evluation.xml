<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        style="@style/divide_line_1px_e9e9e9"
        android:layout_marginLeft="10dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_good_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_good_3x" />

        <TextView
            android:id="@+id/tv_good_name"
            style="@style/textView_style_14sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/civ_good_photo"
            android:text="农夫山泉有点甜"
            android:textColor="@color/text_color_999"
            android:textSize="13sp" />

        <com.cnsunrun.commonui.widget.ratbar.NormalRatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            app:clickable="false"
            app:starCount="5"
            app:starEmpty="@drawable/ic_xinxin_kon"
            app:starFill="@drawable/ic_xinxin_quan"
            app:starHalf="@drawable/ic_xinxin_banke"
            app:starImageSize="25dp"
            app:starPadding="5dp"
            app:starStep="3"
            app:stepSize="Full" />

    </RelativeLayout>


    <TextView
        style="@style/textView_style_14sp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="好产品就是好产品,不错不错啊,欢迎采购"
        android:textColor="@color/text_color_333" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:overScrollMode="never"
        android:scrollbars="none" />


</LinearLayout>
