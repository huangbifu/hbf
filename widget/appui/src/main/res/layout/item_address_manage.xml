<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_userName"
            style="@style/textView_style_14sp"
            android:layout_gravity="center_vertical"
            android:text="尚软科技"
            android:textColor="@color/text_color_333"
            android:textSize="15sp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_user_phone" />

        <TextView
            style="@style/textView_style_14sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="13012345678"
            android:textColor="@color/text_color_999"
            android:textSize="12sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_location_icon" />

        <TextView
            style="@style/textView_style_14sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="武汉市洪山区新都会1栋"
            android:textColor="@color/text_color_999"
            android:textSize="13sp" />
    </LinearLayout>

    <View style="@style/divide_line_1px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">


            <CheckBox
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/select_shopcar_cbbg"
                android:button="@null"
                android:gravity="center_vertical" />

            <TextView
                style="@style/textView_style_14sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="设为默认"
                android:textColor="@color/text_color_999" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_edit_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/ll_delete_address"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edittext_addreee" />

            <TextView
                style="@style/textView_style_14sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="编辑"
                android:textColor="@color/text_color_999" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_delete_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete_address" />

            <TextView
                style="@style/textView_style_14sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="删除"
                android:textColor="@color/text_color_999" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
