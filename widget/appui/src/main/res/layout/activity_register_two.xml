<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_three"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_color"
    android:orientation="vertical">

    <com.cnsunrun.commonui.widget.titlebar.TitleBar
        android:id="@+id/titleBar"
        style="@style/WhiteBackTitleBarStyle"
        app:backgroundColor="@color/orange_color_f97823"
        app:bottomDividerHeight="0dp"
        app:rightVisible="gone"
        app:title="注册"
        app:titleColor="@color/white" />


    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="83dp"
        android:layout_height="83dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_good_3x"
        android:visibility="visible" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <EditText
            style="@style/edit_text_style"
            android:hint="NIHSAMHJASD"
            android:paddingLeft="10dp" />

        <EditText
            style="@style/edit_text_style"
            android:layout_marginTop="10dp"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_gray_btnbg"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="7"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入验证码"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:textColor="@color/text_color_666"
                android:textColorHint="@color/text_color_666"
                android:textSize="14sp" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="@string/get_anth_code"
                android:textColor="@color/orange_color_f97823"
                android:textSize="14sp" />
        </LinearLayout>


        <EditText
            style="@style/edit_text_style"
            android:layout_marginTop="10dp"
            android:hint="请输入密码"
            android:inputType="numberPassword"
            android:paddingLeft="10dp" />
    </LinearLayout>


    <TextView
        android:id="@+id/textView"
        style="@style/bottom_button_style"
        android:layout_marginTop="30dp"
        android:text="注册" />

    <TextView
        style="@style/textView_style_14sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/user_agreement"
        android:textColor="@color/text_color_333"
        android:textSize="12sp" />
</LinearLayout>
