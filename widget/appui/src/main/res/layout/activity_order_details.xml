<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_color"
    android:orientation="vertical">

    <com.cnsunrun.commonui.widget.titlebar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        app:leftAsFinish="true"
        app:leftText="返回"
        app:leftTextColor="@color/main_text_color"
        app:leftVisible="visible"
        app:title="订单详情"
        app:titleColor="#ff1313" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recvProductItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@drawable/stroke_top_and_bottom_line_drawable"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/white_clickable_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="删除订单"
            android:textColor="@color/hint_text_color"
            android:textSize="14sp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.cnsunrun.commonui.widget.button.RoundButton
            android:layout_width="90dp"
            android:layout_height="36dp"
            android:clickable="true"
            android:text="去评价"
            android:textColor="@color/hint_text_color"
            android:textSize="15sp"
            app:btnCornerRadius="5dp"
            app:btnSolidColor="#fff"
            app:btnStrokeColor="@color/hint_text_color"
            app:btnStrokeWidth="1dp" />

        <com.cnsunrun.commonui.widget.button.RoundButton
            android:layout_width="90dp"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:text="去付款"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:btnCornerRadius="5dp"
            app:btnSolidColor="#f00" />
    </LinearLayout>

</LinearLayout>
