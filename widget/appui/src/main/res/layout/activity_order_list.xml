<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_color"
    android:orientation="vertical">

    <com.cnsunrun.commonui.widget.titlebar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        app:leftAsFinish="true"
        app:leftText="返回"
        app:leftTextColor="@color/main_text_color"
        app:leftVisible="visible"
        app:bottomDividerHeight="0dp"
        app:title="我的订单"
        app:titleColor="#f00" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/stroke_top_and_bottom_line_drawable"

        />
    <!--app:tabGravity="fill"-->
    <!--app:tabIndicatorColor="@color/title_color"-->
    <!--app:tabIndicatorHeight="2dp"-->
    <!--app:tabMode="fixed"-->
    <!--app:tabSelectedTextColor="@color/title_color"-->
    <!--app:tabTextColor="@color/hint_text_color"-->
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
