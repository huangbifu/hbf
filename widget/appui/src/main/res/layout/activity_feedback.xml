<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_color"
    android:orientation="vertical">

    <com.cnsunrun.commonui.widget.titlebar.TitleBar
        android:id="@+id/titleBar"
        style="@style/WhiteBackTitleBarStyle"
        app:backgroundColor="@color/orange_color_f97823"
        app:bottomDividerHeight="0dp"
        app:rightText="提交"
        app:rightTextColor="@color/white"
        app:rightVisible="visible"
        app:title="意见反馈"
        app:titleColor="@color/white" />

    <LinearLayout
        android:id="@+id/ll_feedback_type"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_gray_btnbg"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_feedback_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="9"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="反馈类型"
            android:textColor="@color/text_color_333" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/ic_pull_down" />

    </LinearLayout>


    <EditText
        android:id="@+id/edit_feedback_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_gray_btnbg"
        android:gravity="center_vertical"
        android:hint="反馈标题"
        android:paddingLeft="10dp"
        android:textColor="@color/text_color_333"
        android:textColorHint="@color/text_color_333"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/edit_feedback_message"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_gray_btnbg"
        android:gravity="left"
        android:hint="反馈内容"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/text_color_333"
        android:textColorHint="@color/text_color_333"
        android:textSize="14sp" />


</LinearLayout>
