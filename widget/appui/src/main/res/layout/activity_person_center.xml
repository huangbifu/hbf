<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_person_center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_orange_bg"
        android:orientation="vertical">

        <com.cnsunrun.commonui.widget.titlebar.TitleBar
            android:id="@+id/titleBar"
            style="@style/WhiteBackTitleBarStyle"
            app:backgroundColor="@android:color/transparent"
            app:bottomDividerHeight="0dp"
            app:leftIcon="@drawable/ic_message"
            app:rightIcon="@drawable/ic_setting"
            app:rightTextColor="@color/white"
            app:rightVisible="visible"
            app:title="个人中心"
            app:titleColor="@color/white" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civUserPhoto"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_good_3x"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tv_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="尚软科技"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_userMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_userName"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="个人信息介绍"
                    android:textColor="@color/white"
                    android:textSize="15sp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_to_more_2x" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">


            <ImageView
                android:id="@+id/ic_opinion_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_opinion_icon" />

            <TextView
                style="@style/textView_style_13sp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ic_opinion_icon"
                android:text="收货地址管理"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_to_more_2x" />

        </RelativeLayout>

        <View
            style="@style/divide_line_1px_e9e9e9"
            android:layout_marginLeft="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">


            <ImageView
                android:id="@+id/ic_opinion_icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_opinion_icon" />

            <TextView
                style="@style/textView_style_13sp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ic_opinion_icon2"
                android:text="浏览记录"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_to_more_2x" />

        </RelativeLayout>

        <View
            style="@style/divide_line_1px_e9e9e9"
            android:layout_marginLeft="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">


            <ImageView
                android:id="@+id/ic_opinion_icon3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_opinion_icon" />

            <TextView
                style="@style/textView_style_13sp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ic_opinion_icon3"
                android:text="关于我们"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_to_more_2x" />

        </RelativeLayout>

        <View style="@style/divide_line_1px_e9e9e9" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">


            <ImageView
                android:id="@+id/ic_opinion_icon4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_opinion_icon" />

            <TextView
                style="@style/textView_style_13sp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ic_opinion_icon4"
                android:text="收货地址管理"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_to_more_2x" />

        </RelativeLayout>

        <View
            style="@style/divide_line_1px_e9e9e9"
            android:layout_marginLeft="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">


            <ImageView
                android:id="@+id/ic_opinion_icon5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_opinion_icon" />

            <TextView
                style="@style/textView_style_13sp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ic_opinion_icon5"
                android:text="浏览记录"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_to_more_2x" />

        </RelativeLayout>

        <View
            style="@style/divide_line_1px_e9e9e9"
            android:layout_marginLeft="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">


            <ImageView
                android:id="@+id/ic_opinion_icon6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_opinion_icon" />

            <TextView
                style="@style/textView_style_13sp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ic_opinion_icon6"
                android:text="关于我们"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_to_more_2x" />

        </RelativeLayout>

        <View style="@style/divide_line_1px_e9e9e9" />

    </LinearLayout>


</LinearLayout>
