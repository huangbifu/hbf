<resources>

    <!-- Base application theme. -->
    <style name="CommonUITheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/hint_text_color</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:buttonStyle">@style/Button</item>
        <item name="QMUIButtonStyle">@style/CommonUITheme.RoundButton</item>
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="TitleBarStyle">@style/DefTitleBarStyle</item>
    </style>


    <!--<item name="android:paddingLeft">10dp</item>-->
    <!--<item name="android:paddingRight">10dp</item>-->
    <!--<item name="android:paddingTop">8dp</item>-->
    <!--<item name="android:paddingBottom">8dp</item>-->
    <!--<item name="android:minWidth">0dp</item>-->
    <!--<item name="android:minHeight">0dp</item>-->
    <!--<item name="android:singleLine">true</item>-->
    <!--<item name="android:gravity">center</item>-->
    <!--<item name="android:ellipsize">end</item>-->
    <!--<item name="android:textColor">@color/white</item>-->


    <style name="CommonUITheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="TranslucentTheme" parent="CommonUITheme">
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="main_single_text">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="main_multiline_text">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="hint_single_text">
        <item name="android:textColor">@color/hint_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="hint_multiline_text">
        <item name="android:textColor">@color/hint_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="divide_line_1px">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/backgroud_color</item>
    </style>

    <style name="divide_line_1px_e9e9e9">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_color_e9e9</item>
    </style>


    <style name="divide_line_10dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/backgroud_color</item>
    </style>


    <style name="textView_style_13sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_color_333</item>

    </style>

    <style name="textView_style_14sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_666</item>
    </style>

    <style name="textView_style_15sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/text_color_666</item>
        <item name="android:textColor">@color/text_color_666</item>
        <item name="android:background">@drawable/shape_gray_btnbg</item>
    </style>


    <!-- 窗口底部进入动画 -->
    <style name="bottomInWindowAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_out</item>
    </style>
    <!--返回键style-->
    <style name="BackTitleBarStyle" parent="DefTitleBarStyle">
        <item name="leftAsFinish">true</item>
        <item name="leftIcon">@drawable/icon_goback_black</item>
        <item name="leftVisible">visible</item>
    </style>

    <style name="WhiteBackTitleBarStyle" parent="DefTitleBarStyle">
        <item name="leftAsFinish">true</item>
        <item name="leftIcon">@drawable/icon_goback_white</item>
        <item name="leftVisible">visible</item>
    </style>

    <style name="DefTitleBarStyle">
        <item name="backgroundColor">@color/main_button_color</item>
        <item name="titleColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
    </style>

    <style name="bottom_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_orange_btnbg</item>
    </style>

    <style name="RatingBarSmall" parent="Base.Widget.AppCompat.RatingBar.Small"></style>

    <style name="RatingBarlager" parent="Base.Widget.AppCompat.RatingBar.Indicator"></style>

    <style name="RatBaringStyle" parent="Base.Widget.AppCompat.RatingBar.Indicator"></style>


</resources>
