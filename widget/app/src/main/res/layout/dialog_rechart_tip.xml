<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="43dp"
        android:background="@drawable/shap_dialog_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:id="@+id/tvContent"
            android:text="余额不足是否充值?"
            android:gravity="center"
            android:textColor="@color/text_color_333"
            android:textSize="15sp" />

        <View style="@style/limit_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <com.cnsunrun.commonui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/cancel"
                style="@style/submitBtnR1"
                android:layout_toLeftOf="@+id/center_line"
                android:text="取消"
                android:textColor="@color/text1"
                app:qmui_backgroundColor="@color/white"
                app:qmui_borderColor="@color/limit_line1"
                app:qmui_radius="0dp"
                android:layout_weight="1"
                app:qmui_radiusBottomLeft="@dimen/dp_10"
                app:qmui_radiusBottomRight="0dp" />
            <View
                style="@style/vertical_limit_line"/>
            <com.cnsunrun.commonui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/submit"
                style="@style/submitBtnR1"
                android:layout_toLeftOf="@+id/center_line"
                android:text="确定"
                android:textColor="#f97737"
                app:qmui_backgroundColor="@color/white"
                app:qmui_borderColor="@color/limit_line1"
                app:qmui_radius="0dp"
                android:layout_weight="1"
                app:qmui_radiusBottomLeft="0dp"
                app:qmui_radiusBottomRight="@dimen/dp_10" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
