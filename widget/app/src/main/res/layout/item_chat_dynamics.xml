<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/imgUserIcon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:background="@color/text5"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="温柔的风穿堂过"
                android:textColor="@color/text1"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txtContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:text="欢乐谷万圣节组团活动 "
                android:textColor="@color/text3"
                android:textSize="14sp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/layVideo"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_marginRight="18dp"
                android:layout_height="150dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imgCover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@color/text5"
                    app:riv_corner_radius="5dp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/imgPlay"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_mine_collect_play"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <com.cnsunrun.common.widget.MomentPicView
                android:id="@+id/imgPics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:layout_marginTop="10dp"
                app:mpvRadius="5dp"
                app:mpvShowRule="RULE_13"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtAddTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="2017/02/01"
                    android:textColor="@color/text4"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txtDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="删除"
                    android:textColor="@color/color_title_bg"
                    android:textSize="13sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txtLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:drawableLeft="@drawable/ic_chat_dynamicslike"
                    android:drawablePadding="2dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:text="赞"
                    android:textColor="@color/text4"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txtComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_chat_dynamics_comment"
                    android:drawablePadding="2dp"
                    android:gravity="center"
                    android:text="评论"
                    android:textColor="@color/text4"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/limit_line"
        android:layout_marginLeft="10dp"
        android:id="@+id/viewHandleLine"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">
        <!--app:box_Padding="10 10 10 0"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layLike"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_chat_dynamicslike" />

            <TextView
                android:id="@+id/txtLikeInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:ellipsize="end"
                android:text="以前,现在,将来,现在,将来,现在,将来 等13人觉得赞"
                android:textColor="@color/text4"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layComments"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_chat_dynamics_comment" />

            <TextView
                android:id="@+id/txtCommentInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:ellipsize="end"
                android:text="3人评论"
                android:textColor="@color/text4"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txtCommentExpand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:drawableRight="@drawable/ic_chat_comment_more"
                android:ellipsize="end"
                android:text="展开更多"
                android:textColor="@color/color_title_bg"
                android:textSize="13sp" />
        </LinearLayout>


            <com.sunrun.sunrunframwork.weight.ListViewForScroll
                android:id="@+id/moreCommentList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:divider="@null" />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:id="@+id/layCommGap"
            />
    </LinearLayout>

    <View
        style="@style/limit_line"
        android:layout_marginLeft="10dp"

        />
</LinearLayout>