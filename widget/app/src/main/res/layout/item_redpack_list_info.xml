<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_clickable_selector"
    android:orientation="vertical">

    <com.cnsunrun.common.widget.BoxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:box_Padding="10 13 10 12">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgUserIcon"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_marginRight="10dp"
            android:src="@color/text5"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="温柔的风穿堂过"
                android:textColor="@color/text1"
                android:textSize="17sp" />
            <TextView
                android:id="@+id/txtDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="5dp"
                android:text="08-30 12:23"
                android:textColor="@color/text4"
                android:textSize="12sp" />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bomb_list_image"
            android:id="@+id/imgBoom"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/txtMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:text="0.00元"
            android:textColor="#cb3424"
            android:textSize="15sp" />

    </com.cnsunrun.common.widget.BoxLayout>


    <View
        style="@style/limit_line"
        />
</LinearLayout>