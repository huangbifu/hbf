<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/promotion_poster_bg"
    android:orientation="vertical">

    <com.cnsunrun.common.widget.titlebar.TitleBar
        android:id="@+id/titleBar"
        style="@style/NewWhiteBackTitleBarStyle"
        app:backgroundColor="@color/white"
        app:bottomDividerHeight="1dp"
        app:title="推广海报" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_width="285dp"
                    android:layout_height="285dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="90dp"
                    android:background="@drawable/shape_white_poster_bg">

                    <LinearLayout
                        android:id="@+id/llCode"
                        android:layout_width="144dp"
                        android:layout_height="144dp"
                        android:layout_below="@+id/tvAppName"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/shape_linear_bg"
                        android:padding="@dimen/dp_10">

                        <ImageView
                            android:id="@+id/ivErWeiMa"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/erweima" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvAppName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="60dp"
                        android:text=""
                        android:textColor="@color/text_color_333"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/llCode"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="扫码关注我们"
                        android:textColor="@color/text_color_333"
                        android:textSize="14sp" />

                </RelativeLayout>

                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="45dp"
                    android:background="@drawable/shape_white_logo_bg">

                    <ImageView
                        android:id="@+id/ivLogo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/white" />
                </FrameLayout>


            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="微信打不开时，请用qq或支付宝扫码注册" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="35dp"
                android:scaleType="fitXY"
                android:src="@drawable/poster_img" />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
