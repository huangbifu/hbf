<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shap_dialog_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="请输入收费标准"
            android:textColor="@color/main_text_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_money"
            android:layout_width="245dp"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_dialog_give_reward"
            android:hint="不能低于1元"
            android:paddingLeft="15dp"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textColor="@color/text_gray_color_d0"
            android:textColorHint="@color/text_gray_color_d0"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_average_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:text="单位为每次"
            android:textColor="#999999"
            android:textSize="10dp" />

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/submit"
                android:layout_width="245dp"
                android:layout_height="44dp"
                android:background="@drawable/btn_blue_bg"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
