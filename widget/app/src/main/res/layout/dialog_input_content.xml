<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="43dp"
        android:background="@drawable/shap_dialog_bg"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="center"
                android:padding="0dp"
                android:text="建群组"
                android:textColor="@color/text3"
                android:textSize="18sp" />

            <com.cnsunrun.commonui.widget.DashedLineView
                android:layout_width="match_parent"
                android:layout_height="1dp"

                />
            <TextView
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="center"
                android:padding="0dp"
                android:text="0.00元"
                android:visibility="gone"
                android:textColor="@color/text3"
                android:textSize="18sp" />
            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_dialog_close"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editContent"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/shape_white_border_bg"
                android:hint="请输入群名称"
                android:textSize="14sp"
                android:textColor="@color/text4"
                android:textColorHint="@color/text4"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:singleLine="true"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layBotton"
                android:visibility="gone"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="免密码下注"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:textSize="15sp"
                    android:textColor="@color/text_color_333"
                    />

                <com.cnsunrun.commonui.widget.SwitchButton.SwitchButton
                    android:id="@+id/sb_no_password_bet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    app:sb_checked="false"
                    app:sb_show_indicator="false"
                    />

            </RelativeLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.cnsunrun.commonui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/submit"
                style="@style/submitBtnR1"

                android:text="确定"
                android:layout_toLeftOf="@+id/center_line"
                />

            <View
                android:id="@+id/center_line"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp" />


            <com.cnsunrun.commonui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/cancel"
                style="@style/submitBtnR1"
                android:layout_toRightOf="@+id/center_line"
                android:text="取消"
                app:qmui_backgroundColor="@color/text5"
                app:qmui_borderColor="@color/limit_line1"
                app:qmui_borderWidth="1dp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
