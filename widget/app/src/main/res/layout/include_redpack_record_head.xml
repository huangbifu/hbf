<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_fe481e"
    android:orientation="vertical">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:id="@+id/imgBgBar"
    android:scaleType="centerCrop"
    android:background="@drawable/mine_bg_img"
    />

    <com.cnsunrun.common.widget.BoxLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:box_Padding="10 0 10 0"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgUserIcon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginRight="10dp"
            android:src="@color/text5"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="温柔的风穿堂过"
                android:textColor="@color/white"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/txtMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="5dp"
                android:text="0.00"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="21sp" />
        </LinearLayout>


    </com.cnsunrun.common.widget.BoxLayout>

</RelativeLayout>