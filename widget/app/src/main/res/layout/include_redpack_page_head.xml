<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="34dp"
    android:id="@+id/imgBgBar"
    android:background="@drawable/ic_redp_bar_img_3x"
    />
<LinearLayout
    android:layout_below="@+id/imgBgBar"
    android:id="@+id/layMoney"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_marginBottom="15dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="-22dp"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:id="@+id/civUserPhoto"
        android:src="@color/text5"
        />
    <TextView
        android:id="@+id/tvFormUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="来自 的红包"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15-9"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:id="@+id/layRedPackMoney"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textSize="40sp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textSize="12sp"
            />
    </LinearLayout>

</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingLeft="10dp"
    android:id="@+id/layNumber"
    android:background="@color/white"
    android:layout_below="@+id/layMoney"
    android:layout_height="30dp">
    <TextView
        android:id="@+id/tvPackNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5个红包共0.00元"
        android:textColor="@color/text4"
        android:textSize="14sp"
        />
</LinearLayout>
    <View
        android:layout_below="@+id/layNumber"
        style="@style/limit_line"/>

</RelativeLayout>