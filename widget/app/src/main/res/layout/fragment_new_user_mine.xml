<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f9f5f4"
        android:orientation="vertical">

        <com.cnsunrun.commonui.widget.titlebar.TitleBar
            android:id="@+id/titleBar"
            style="@style/DefTitleBarStyle"
            app:backgroundColor="@color/color_fe481e"
            app:bottomDivider="@color/color_fe481e"
            app:leftVisible="gone"
            app:title="我的"
            app:titleColor="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="18dp"
                android:paddingRight="13dp">

                <ImageView
                    android:id="@+id/tvNotice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:src="@drawable/home_notice_btn" />

                <ImageView
                    android:id="@+id/ivSetting"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/mine_setting_btn" />
            </RelativeLayout>
        </com.cnsunrun.commonui.widget.titlebar.TitleBar>
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:background="@color/color_fe481e">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/ivUserIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/mine_icon_touxiang_normal"
                    app:riv_oval="true" />

                <LinearLayout
                    android:id="@+id/llNikeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvNikeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/common_qrcode_icon"
                        android:text="昵称"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvIdNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID:"
                        android:textColor="@color/white"
                        android:textSize="11sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvPersonalData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="13dp"
                    android:layout_weight="1"
                    android:drawablePadding="2dp"
                    android:drawableRight="@drawable/mine_arr_icon"
                    android:gravity="right"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="个人资料"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="-10dp"
                android:src="@drawable/mine_bg_img" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="-70dp"
            android:background="@drawable/shape_white_bg"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的钱包(元)"
                android:textColor="@color/text_color_333"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="@color/color_fe481e"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMoneyRecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/help_btn_select_nor"
                    android:gravity="right"
                    android:text="资金记录" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="我的收益(元)"
                android:textColor="@color/text_color_333"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvEarnings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0.00"
                    android:textColor="@color/color_fe481e"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvEarningsRecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/help_btn_select_nor"
                    android:gravity="right"
                    android:text="收益记录" />
            </LinearLayout>

            <View
                style="@style/divide_line_1px_e9e9e9"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTransfer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shap_bg_transfer"
                    android:gravity="center"
                    android:text="转账"
                    android:textColor="@color/color_fe481e"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvIntoBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shap_bg_transfer"
                    android:gravity="center"
                    android:text="收益转入钱包"
                    android:textColor="@color/color_fe481e" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvWithdrawal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shap_bg_withdrawal"
                    android:gravity="center"
                    android:text="提现"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvVoucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/shap_bg_voucher"
                    android:gravity="center"
                    android:text="充值"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>



                <com.sunrun.sunrunframwork.view.ItemView
                    android:id="@+id/itemQiandao"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="30dp"
                    android:clickable="true"
                    app:leftTVText="签到"
                    app:leftTVTextDrawLeftImg="@drawable/wode_icon_qiandao_normal3x" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@color/white"
                    android:divider="@drawable/shape_limt_line"
                    android:orientation="vertical"
                    android:showDividers="middle">

                    <com.sunrun.sunrunframwork.view.ItemView
                        android:id="@+id/itemRecommend"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:clickable="true"
                        app:leftTVText="我的推荐"
                        app:leftTVTextDrawLeftImg="@drawable/mine_recommend_icon" />

                    <com.sunrun.sunrunframwork.view.ItemView
                        android:id="@+id/itemMyBankCard"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:clickable="true"
                        app:leftTVText="我的银行卡"
                        app:leftTVTextDrawLeftImg="@drawable/mine_card" />

                    <com.sunrun.sunrunframwork.view.ItemView
                        android:id="@+id/itemZhifubao"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:clickable="true"
                        app:leftTVText="我的支付宝"
                        app:leftTVTextDrawLeftImg="@drawable/zhifubao" />

                    <com.sunrun.sunrunframwork.view.ItemView
                        android:id="@+id/itemShare"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:clickable="true"
                        app:leftTVText="推广海报"
                        app:leftTVTextDrawLeftImg="@drawable/mine_share_icon" />

                    <com.sunrun.sunrunframwork.view.ItemView
                        android:id="@+id/itemAward"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:clickable="true"
                        android:visibility="gone"
                        app:leftTVText="抽奖"
                        app:leftTVTextDrawLeftImg="@drawable/mine_award_icon" />

                    <com.sunrun.sunrunframwork.view.ItemView
                        android:id="@+id/itemService"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:clickable="true"
                        app:leftTVText="客服中心"
                        app:leftTVTextDrawLeftImg="@drawable/mine_service_icon" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="#f9f5f4"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>