<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/com_dark_bg_color"
    >

    <com.cnsunrun.common.widget.titlebar.TitleBar
        android:id="@+id/titleBar"
        style="@style/BackTitleBarStyle"
        app:backgroundColor="@color/white"
        app:bottomDividerHeight="1dp"
        app:title="修改昵称"
        app:leftVisible="visible"
        app:rightText="保存"
        app:rightTextColor="@color/back"
        app:rightVisible="visible"
        app:leftIcon="@drawable/back"
        app:titleColor="@color/back"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shape_chat_comment_bg"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_title"
            android:hint="昵称"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:background="@null"/>

    </LinearLayout>




</LinearLayout>