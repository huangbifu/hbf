<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_color"
    android:orientation="vertical">

    <com.cnsunrun.commonui.widget.titlebar.TitleBar
        android:id="@+id/titleBar"
        style="@style/BackTitleBarStyle"
        app:title="详细资料"

        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.cnsunrun.common.widget.BoxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"

            >

            <com.cnsunrun.common.widget.BoxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                app:box_Padding="10">

                <com.cnsunrun.common.widget.BoxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:box_Padding="10 0 10 0">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgUserIcon"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginRight="10dp"
                        android:src="@color/text5"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="2dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/text1"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/txtInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="昵称: "
                            android:visibility="invisible"
                            android:textColor="@color/text3"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/txtSignature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="ID:"
                            android:textColor="@color/text3"
                            android:textSize="11sp" />
                    </LinearLayout>


                </com.cnsunrun.common.widget.BoxLayout>

            </com.cnsunrun.common.widget.BoxLayout>

            <com.cnsunrun.common.widget.BoxLayout
                android:id="@+id/layRemark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@color/white"
                android:orientation="vertical">

                <com.cnsunrun.common.widget.FormLabLayout
                    android:id="@+id/itemSetRemark"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    app:lab_RightIcon="@drawable/ic_item_right_next"
                    app:lab_Txt="设置备注" />


            </com.cnsunrun.common.widget.BoxLayout>


            <com.cnsunrun.commonui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/btnSendMsg"
                style="@style/submitBtnR1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:text="发消息"
                android:textSize="18sp"
                android:visibility="gone"
                />

            <!---->
            <com.cnsunrun.commonui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/btnDelete"
                style="@style/submitBtnR1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="删除联系人"
                android:textSize="18sp"
                android:textColor="@color/color_fe481e"
                app:qmui_backgroundColor="@color/white"
                app:qmui_borderColor="@color/color_fe481e"
                app:qmui_borderWidth="1dp"
                android:visibility="gone"
                />
        </com.cnsunrun.common.widget.BoxLayout>
    </ScrollView>

</LinearLayout>
