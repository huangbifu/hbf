<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_color"
    android:orientation="vertical">

    <com.cnsunrun.commonui.widget.titlebar.TitleBar
        android:id="@+id/titleBar"
        style="@style/BackTitleBarStyle"
        app:title="聊天信息" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.cnsunrun.common.widget.BoxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"

            >

            <com.cnsunrun.common.widget.BoxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                app:box_Padding="10">
            <com.zhy.view.flowlayout.TagFlowLayout
                android:layout_width="match_parent"
                android:id="@+id/userInfos"
                android:layout_height="wrap_content">

            </com.zhy.view.flowlayout.TagFlowLayout>
            </com.cnsunrun.common.widget.BoxLayout>

            <com.cnsunrun.common.widget.BoxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@color/white"
                android:orientation="vertical"
                >

                <com.cnsunrun.common.widget.FormLabLayout
                    android:id="@+id/itemAllowNotify"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    app:lab_Txt="消息免打扰">

                    <com.cnsunrun.common.widget.SwitchView
                        android:id="@+id/toggleAllowNotify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="8dp"
                        app:isOpened="true"
                        />
                </com.cnsunrun.common.widget.FormLabLayout>
                <View
                    style="@style/limit_line"
                    android:layout_marginLeft="5dp"
                    />
                <com.cnsunrun.common.widget.FormLabLayout
                    android:id="@+id/itemItemTop"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    app:lab_Txt="会话置顶">

                    <com.cnsunrun.common.widget.SwitchView
                        android:id="@+id/toggleIsTop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="8dp"
                        app:isOpened="true"
                        />
                </com.cnsunrun.common.widget.FormLabLayout>
                </com.cnsunrun.common.widget.BoxLayout>
            <com.cnsunrun.common.widget.BoxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@color/white"
                android:orientation="vertical"
                >
                <com.cnsunrun.common.widget.FormLabLayout
                    android:id="@+id/itemFindHistory"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    app:lab_RightIcon="@drawable/ic_item_right_next"
                    app:lab_Txt="查找聊天记录" />
                <View
                    style="@style/limit_line"
                    android:layout_marginLeft="5dp"
                    />

                <com.cnsunrun.common.widget.FormLabLayout
                    android:id="@+id/itemClearHistory"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    app:lab_Txt="清除聊天记录">

                </com.cnsunrun.common.widget.FormLabLayout>
            </com.cnsunrun.common.widget.BoxLayout>
        </com.cnsunrun.common.widget.BoxLayout>
    </ScrollView>

</LinearLayout>
