<resources>

    <!-- Base application theme. -->
    <style name="UITheme" parent="CommonUITheme">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black_color</item>
        <item name="colorAccent">@color/hint_text_color</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:textViewStyle">@style/textview_nopadding</item>
        <item name="android:editTextStyle">@style/appEditStyle</item>
    </style>

    <style name="SplashTheme" parent="UITheme">
    <item name="android:windowBackground">@drawable/ic_splash_new</item>
    </style>
    <!--对话框弹出window背景变暗-->
    <style name="Dialog" parent="Base.Animation.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!--对话框从下向上弹出动画-->
    <style name="Dialog.Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>
    <style name="appEditStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textCursorDrawable">@drawable/shape_textcursor</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textColorHint">@color/text_color_666</item>
    </style>

    <style name="textview_nopadding">
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TranslucentTheme" parent="AppTheme">
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="item5Gap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:background">@color/backgroud_color</item>
    </style>
    <style name="item10Gap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/backgroud_color</item>
    </style>
